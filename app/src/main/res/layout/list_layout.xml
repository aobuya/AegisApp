<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin1"
            android:orientation="horizontal">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/bike1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="1008" />
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/case_txt"

                            android:fontFamily="@font/asap"
                            android:text="Case:"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/case_txt"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/case_status"
                            android:fontFamily="@font/asap"
                            android:textColor="@color/bar"
                            android:text="Open" />

                </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/lin1"
            android:id="@+id/lin2"
            android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:text="Rider :"
                    android:id="@+id/qw1"/>

                <TextView
                    android:fontFamily="@font/asap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="helmet"
                    android:id="@+id/txtcus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/lin2"
            android:id="@+id/lin3"
            android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/asap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer  :"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_below="@+id/qw1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qw1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="helmet"
                    android:fontFamily="@font/asap"
                    android:id="@+id/txtrid"/>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/asap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_stamp"
            android:layout_below="@+id/lin3"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:text="time"/>
</RelativeLayout>